<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation=
    "http://java.sun.com/xml/ns/j2ee
    http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
    <servlet>
      <servlet-name>GroovyServlet</servlet-name>
      <servlet-class>groovy.servlet.GroovyServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
      <servlet-name>FusionTablesServlet</servlet-name>
      <servlet-class>edu.harvard.chs.citecollectionmanager.FusionTablesServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>GroovyServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroovyServlet</servlet-name>
        <url-pattern>/oauth2callback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroovyServlet</servlet-name>
        <url-pattern>/authtable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroovyServlet</servlet-name>
        <url-pattern>/createauth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroovyServlet</servlet-name>
        <url-pattern>/query</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroovyServlet</servlet-name>
        <url-pattern>/editor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FusionTablesServlet</servlet-name>
        <url-pattern>/tables/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
